---
name: '{{ emr_cluster_name }}'
region: '{{ emr_region }}'
task_instance_num: 1
task_instance_type: m1.medium
task_instance_bid: 0.03
core_instance_num: 1
core_instance_type: m1.medium
master_instance_num: 1
master_instance_type: m1.small

bootstrap_actions:
  security:
    path: 's3://{{ emr_s3_lib_bucket }}/security.sh'
  ganglia:
    path: s3://elasticmapreduce/bootstrap-actions/install-ganglia
steps:
  - type: hive_install
  - type: script
    name: "Install Sqoop"
    step_args: [ "s3://{{ emr_s3_lib_bucket }}/install-sqoop", "s3://{{ emr_s3_lib_bucket }}" ]

vpc_subnet_id: '{{ emr_vpc_subnet_id }}'
log_uri: 's3://{{ emr_s3_logs_bucket }}'
